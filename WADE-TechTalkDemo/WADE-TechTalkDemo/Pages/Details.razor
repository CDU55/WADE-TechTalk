@page "/details"
<MatThemeProvider Theme="@indexTheme">
    <div class="mat-layout-grid">

        <div class="mat-layout-grid-inner">
            <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
                <a href="@item.Uri" target="_blank"><h3>@item.Uri</h3></a>
            </div>
            <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
                <h3>ENG: @item.PrefLabelEng</h3>
            </div>
            <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
                <h3>DE: @item.PrefLabelDe</h3>
            </div>
        </div>
        </div>
            <div class="mat-layout-grid">

                <div class="mat-layout-grid-inner">
                    <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
                        <h4>Broader</h4>
                    </div>
                    <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
                        <MatTable Items="@item.Broader" Striped="true" class="mat-elevation-z5" UseSortHeaderRow="true">
                            <MatTableHeader>
                                <MatSortHeaderRow SortChanged="@SortDataBroader">
                                    <MatSortHeader Style="width: 75%" SortId="PrefLabelEng">ENG</MatSortHeader>
                                    <MatSortHeader Style="width: 75%" SortId="PrefLabelDe">DE</MatSortHeader>
                                    <MatSortHeader SortId="Resource">Resource</MatSortHeader>
                                    <MatSortHeader SortId=""></MatSortHeader>
                                </MatSortHeaderRow>
                            </MatTableHeader>
                            <MatTableRow>
                                <td>@context.PrefLabelEng</td>
                                <td>@context.PrefLabelDe</td>
                                <td><a href="@context.Uri" target="_blank">@context.Uri</a></td>
                                <td><MatButton Style="text-align: center" Icon="@MatIconNames.Play_arrow" Label="Details" Class="btn btn-success" OnClick="()=>ChangeConcept(context.Uri)" Raised="true"></MatButton></td>
                            </MatTableRow>
                        </MatTable>
                    </div>
                </div>
            </div>
            <div class="mat-layout-grid">
                <div class="mat-layout-grid-inner">
                    <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
                        <h4>Narrower</h4>
                    </div>
                    <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
                        <MatTable Items="@item.Narrower" Striped="true" class="mat-elevation-z5" UseSortHeaderRow="true">
                            <MatTableHeader>
                                <MatSortHeaderRow SortChanged="@SortDataNarrower">
                                    <MatSortHeader Style="width: 75%" SortId="PrefLabelEng">ENG</MatSortHeader>
                                    <MatSortHeader Style="width: 75%" SortId="PrefLabelDe">DE</MatSortHeader>
                                    <MatSortHeader SortId="Resource">Resource</MatSortHeader>
                                    <MatSortHeader SortId=""></MatSortHeader>
                                </MatSortHeaderRow>
                            </MatTableHeader>
                            <MatTableRow>
                                <td>@context.PrefLabelEng</td>
                                <td>@context.PrefLabelDe</td>
                                <td><a href="@context.Uri" target="_blank">@context.Uri</a></td>
                                <td><MatButton Style="text-align: center" Icon="@MatIconNames.Play_arrow" Label="Details" Class="btn btn-success" OnClick="()=>ChangeConcept(context.Uri)" Raised="true"></MatButton></td>
                            </MatTableRow>
                        </MatTable>
                    </div>
                </div>
            </div>
            <div class="mat-layout-grid">
                <div class="mat-layout-grid-inner">
                    <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
                        <h4>Related</h4>
                    </div>
                    <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
                        <MatTable Items="@item.Related" Striped="true" class="mat-elevation-z5" UseSortHeaderRow="true">
                            <MatTableHeader>
                                <MatSortHeaderRow SortChanged="@SortDataRelated">
                                    <MatSortHeader Style="width: 75%" SortId="PrefLabelEng">ENG</MatSortHeader>
                                    <MatSortHeader Style="width: 75%" SortId="PrefLabelDe">DE</MatSortHeader>
                                    <MatSortHeader SortId="Resource">Resource</MatSortHeader>
                                    <MatSortHeader SortId=""></MatSortHeader>
                                </MatSortHeaderRow>
                            </MatTableHeader>
                            <MatTableRow>
                                <td>@context.PrefLabelEng</td>
                                <td>@context.PrefLabelDe</td>
                                <td><a href="@context.Uri" target="_blank">@context.Uri</a></td>
                                <td><MatButton Style="text-align: center" Icon="@MatIconNames.Play_arrow" Label="Details" Class="btn btn-success" OnClick="()=>ChangeConcept(context.Uri)" Raised="true"></MatButton></td>
                            </MatTableRow>
                        </MatTable>
                    </div>
                </div>
            </div>
</MatThemeProvider>
